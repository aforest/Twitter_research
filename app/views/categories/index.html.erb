<h1>Categories</h1>
<ul id="categories">
  <%@categories.each do |c| %>
    <li>
      <span class="title">
        <%= link_to(c.title,category_url(c))%>
      </span>
      <span class"edit">
        <%= link_to('edit,edit_category_url(c))%>
      </span>
      <span class="delete">
        <%= link_to('Delete, catergory_url(c))
            :method => :delete
            :confirm => 'are you sure' %>
      </span>
